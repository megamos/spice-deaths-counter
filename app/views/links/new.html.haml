.new-link-form
  %h2 Add a link
  = simple_form_for @link, html: {class: 'form-horizontal'} do |f|
    = f.input :category, collection: ['Newspaper', 'Research', 'Video', 'Other'], prompt: 'Choose'
    = f.input :topic
    = f.input :info, as: :text, html: { placeholder: 'short about info here...'}
    = f.input :url, as: :url
    = f.button :submit, 'Add link', class: 'btn btn-primary'

  = link_to root_path, class: 'return-link' do
    %span.glyphicon.glyphicon-arrow-left
    %span Go Back
