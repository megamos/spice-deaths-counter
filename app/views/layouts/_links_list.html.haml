  = render 'layouts/sorting_options'
  .wrapper
    - @links.take(10).each do |link|
      .link
        .vote-div
          %span.voting
            = link_to upvote_link_path(link), method: :put do
              %i.fa.fa-chevron-up
            %span.total= (link.cached_votes_up - link.cached_votes_down)
            = link_to downvote_link_path(link), method: :put do
              %i.fa.fa-chevron-down
        .link-body
          = link_to link.topic, link.url
          %p
            = link.info
